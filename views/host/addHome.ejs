    <body>

        <%- include('../partials/nav') %>

            <!-- â­ Centered Welcome Card -->
            <div class="flex items-center justify-center mt-5 px-4">
                <div class="bg-white px-10 py-8 rounded-xl shadow-lg">
                    <h1 class="text-3xl font-bold text-gray-800 mb-5">
                        Register your home here:
                    </h1>

                    <form action="/host/add-home" method="POST">

                        <h2 class="text-2xl font-bold text-gray-800 mb-2">Add Your Home</h2>

                        <!-- Input -->
                        <input type="text" name="houseName" placeholder="Enter your house name" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
             focus:ring-2 focus:ring-red-400 focus:outline-none text-gray-700 mb-3" required />

                        <input type="number" name="housePrice" placeholder="Price per night" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
             focus:ring-2 focus:ring-red-400 focus:outline-none text-gray-700 mb-3" required />

                        <input type="text" name="houseLocation" placeholder="Enter your house location" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
             focus:ring-2 focus:ring-red-400 focus:outline-none text-gray-700 mb-3" required />

                        <input type="text" name="rating" placeholder="Enter rating" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
             focus:ring-2 focus:ring-red-400 focus:outline-none text-gray-700 mb-3" required />

                        <input type="text" name="ImageUrl" placeholder="Image URL" class="w-full px-4 py-3 border border-gray-300 rounded-lg 
             focus:ring-2 focus:ring-red-400 focus:outline-none text-gray-700 mb-3" required />

                        <!-- Submit Button -->
                        <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-lg 
             hover:bg-red-600 transition font-medium">
                            Submit
                        </button>

                    </form>



                </div>
            </div>

